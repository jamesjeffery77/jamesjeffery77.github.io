{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    
    "title": {
      "text": "Covid Deaths by Region",
      "subtitle":"Raw data",
      "subtitleFontStyle":"italic",
      "subtitleFontSize":10,
      "anchor": "start",
      "color": "black"
    },
    
     "data": {
      "url": "https://raw.githubusercontent.com/jamesjeffery77/jamesjeffery77.github.io/main/covidDeathsByRegion.csv",
      "format": {"type": "csv"}
    },
  
     "transform":[
        
        {"filter": {
          "field": "areaName", 
          "oneOf": ["Bristol, City of", "Bolton", "Glasgow City"]}
          }
  
  
      ],
    
    
    "height": 300,
    "width": 290,
    "background":null,
     
    "mark": {"type": "line", "point": false},
   
    "encoding": {
  
      "x": {
        "field": "date",
        "type": "temporal",
        "title": null,
        "axis": {"grid": false}
      },
  
      "y": {
        "field": "cumCasesBySpecimenDate",
        "type": "quantitative",
        "title": null,
        "axis": {"grid": false}
      },
  
      "color": {
        "field": "areaName",
        "type": "nominal",
        "scale": {"scheme": "set1"},
        "title": "Regions",
        "legend": {
          "orient": "top-left", 
          "fillColor": null}
      }
  }
  }
